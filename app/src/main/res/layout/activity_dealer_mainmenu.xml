<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#3a3a3a"
    tools:context="com.inducesmile.retailer.MainMenuActivity">

    <FrameLayout
        android:id="@+id/frame_layout"
        android:layout_width="match_parent"
        android:layout_height="108dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="0dp"
        android:layout_marginLeft="0dp"
        android:layout_marginTop="0dp"
        android:padding="0dp">

    </FrameLayout>

    <ImageView
        android:id="@+id/logo"
        android:layout_width="355dp"
        android:layout_height="109dp"
        android:layout_marginStart="14dp"
        android:layout_marginLeft="14dp"
        android:layout_marginBottom="268dp"
        android:contentDescription="@string/todo"
        app:srcCompat="@drawable/logo" />

    <TextView
        android:id="@+id/HOME"
        android:layout_width="218dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginStart="86dp"
        android:layout_marginLeft="86dp"
        android:layout_marginTop="108dp"
        android:layout_marginEnd="80dp"
        android:layout_marginRight="80dp"
        android:gravity="center"
        android:text="@string/dealer_menu_label"
        android:textColor="#ffffff"
        android:textSize="18sp"
        android:textStyle="bold" />

    <ImageView
        android:id="@+id/load_retailer_icon"
        android:layout_width="170dp"
        android:layout_height="130dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="14dp"
        android:layout_marginLeft="14dp"
        android:layout_marginBottom="290dp"
        android:contentDescription="@string/todo"
        app:srcCompat="@drawable/load_retailer" />

    <ImageView
        android:id="@+id/product_list_icon"
        android:layout_width="170dp"
        android:layout_height="130dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="198dp"
        android:layout_marginLeft="198dp"
        android:layout_marginBottom="290dp"
        android:contentDescription="@string/todo"
        app:srcCompat="@drawable/register_retailer" />

    <ImageView
        android:id="@+id/pass_load"
        android:layout_width="170dp"
        android:layout_height="130dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="14dp"
        android:layout_marginLeft="14dp"
        android:layout_marginBottom="111dp"
        android:contentDescription="@string/todo"
        app:srcCompat="@drawable/pass_load" />

    <ImageView
        android:id="@+id/check_balance"
        android:layout_width="170dp"
        android:layout_height="130dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="201dp"
        android:layout_marginLeft="201dp"
        android:layout_marginBottom="112dp"
        android:contentDescription="@string/todo"
        android:onClick="balanceInquiry"
        app:srcCompat="@drawable/check_balance" />

    <android.support.v7.widget.RecyclerView
        android:id="@+id/product_list"
        android:layout_width="match_parent"
        android:layout_height="24dp"
        android:layout_below="@+id/frame_layout"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_marginStart="0dp"
        android:layout_marginLeft="0dp"
        android:layout_marginTop="421dp"
        android:orientation="vertical"
        android:scrollbars="none"
        android:visibility="gone" >

    </android.support.v7.widget.RecyclerView>

    <Button
        android:id="@+id/settings_button"
        android:layout_width="313dp"
        android:layout_height="34dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="3dp"
        android:background="@drawable/common_google_signin_btn_text_light_normal_background"
        android:gravity="center_vertical|center_horizontal"
        android:padding="5dp"
        android:text="@string/settings"
        android:textColor="@color/textbox"
        android:textSize="14sp"
        android:textStyle="bold" />

</RelativeLayout>